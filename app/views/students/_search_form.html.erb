<%= form_with(url: students_path, method: :get, local: true, class: "form-inline") do |form| %>
  <div class="form-group mr-3">
    <%= form.label :major, "Select Major", class: "form-label mr-2" %>
    <%= form.select :major, options_for_select(Student::VALID_MAJORS, params.dig(:search, :major)), { prompt: "Any Major" }, name: 'search[major]', class: "form-control" %>
  </div>

  <div class="form-group mr-3">
    <%= form.label :graduation_date, "Graduation Date", class: "form-label mr-2" %>
    <div>
      <%= form.radio_button :graduation_date_option, 'before', checked: params.dig(:search, :graduation_date_option) == 'before' %>
      <%= form.label :graduation_date_option_before, 'Before', class: "mr-2" %>
      
      <%= form.radio_button :graduation_date_option, 'after', checked: params.dig(:search, :graduation_date_option) == 'after' %>
      <%= form.label :graduation_date_option_after, 'After', class: "mr-2" %>
    </div>
    <%= form.date_field :graduation_date, value: params.dig(:search, :graduation_date), name: 'search[graduation_date]', class: "form-control mt-2" %>
  </div>

  <div class="form-group mr-3">
    <%= form.submit "Search", class: "btn btn-primary" %>
  </div>

  <%= link_to 'Show All', students_path(search: { show_all: true }), class: "btn btn-secondary ml-2" %>
<% end %>
